from tkinter import Button, Entry, Label,Text, messagebox
from tkinter import StringVar,END,HORIZONTAL,Frame,Toplevel
import tkinter as tk

def mostrarMensaje():
    messagebox.showinfo("Aviso", "Este mensaje es para informar algo")
    messagebox.showerror("Error:", "Todo fallo con exito")

#crear ventana
ventana =tk()
ventana.title("practica 11:3 ")
ventana.geometry("600x400")

#secciones
seccion1 = Frame(ventana, bg="#00bfff")
seccion1.pack(expand=True, fill="both")
seccion2 = Frame(ventana, bg="#ffffff")
seccion2.pack(expand=True, fill="both")
seccion3 = Frame(ventana, bg="#00394d")
seccion3.pack(expand=True, fill="both")

#crear botones
def agregarBoton():
    botonVerde.config(text="+",bg="green",fg="while")
    botonNuevo= Button(seccion3,text="BotonNuevo")
    botonNuevo.pack()


botonAzul = Button(seccion1, text="boton azul cielo", fg="#00bbff", bg="white",
command=mostrarMensaje)
botonAzul.place(x=60, y=60)
botonBlanco= Button(seccion2, text="boton blanco", fg="white", bg="gray")
botonBlanco.grid(row=0, column=0)
botonAzulF = Button(seccion2, text="boton azul fuerte", fg="blue", bg="white")
botonAzulF.grid(row=1, column=1)
botonVerde = Button(seccion3, text="boton verde", fg="green", bg="white",
command=agregarBoton)
botonVerde.pack()

ventana.mainloop()


    




# cuenta caja

total=1000
print("Binevenido a tu caja Popular") 

opcion=int(input())
if opcion==1:
    ingreso=float(input("¿Cuanto dinero deseas ingresar?:"))
    total+=ingreso
    print(f"Tu saldo es de {total:.2f}")
elif opcion==2:
    egreso=float(input("¿Cuanto dinero deseas retirar?:"))
    if total-egreso<0:
        print(f"no cuentas con fondos {total:.2f}")
    else:
        total-=egreso
        print(f"Tu saldo es de {total:.2f}")
elif opcion==3:
    quit()